 <p>
  <strong>Comment:</strong>
  <%= comment.body %>
</p>
 
<p>
  <% if user_signed_in? %>
     <% if current_user.id == comment.user_id %> <%= link_to 'Delete', [comment.post, comment],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
     <% end %>
   <% end %>
</p>